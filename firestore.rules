rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Cities collection
    match /cities/{cityId} {
      // Allow anyone to read cities
      allow read: if true;
      
      // Only allow writes from Cloud Functions (authenticated service account)
      // For now, disable direct writes - all writes should go through API
      allow write: if false;
      
      // AI generations subcollection
      match /aiGenerations/{generationId} {
        // Allow anyone to read cached AI content
        allow read: if true;
        
        // Only Cloud Functions can write AI generations
        allow write: if false;
      }
    }
    
    // Pages collection
    match /pages/{pageId} {
      // Allow anyone to read pages
      allow read: if true;
      
      // Only allow writes from Cloud Functions
      // For now, disable direct writes - all writes should go through API
      allow write: if false;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
